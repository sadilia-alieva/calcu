  <script type="text/python">
from browser import document

display = document["display"]

# простые функции (чисто для примера, но не обязательны)
def add(a, b): return a + b
def sub(a, b): return a - b
def mul(a, b): return a * b
def div(a, b): return a / b

def on_click(event):
    text = event.target.text
    if text == "C":
        display.value = ""
    elif text == "=":
        try:
            # Вычисляем введённое выражение
            display.value = str(eval(display.value))
        except:
            display.value = "Ошибка"
    else:
        display.value += text

# Привязываем обработчик ко всем кнопкам
for btn in document.select("button"):
    btn.bind("click", on_click)
  </script>
